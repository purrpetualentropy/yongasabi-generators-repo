function verbTenseSuffixer (verb, tense) {
let outputLoc = document.getElementById("suffixresults");
let verbLength = verb.length;
let fixedTense = tense.toLowerCase();
let i = verb;

switch (verbLength) {
  case 3:
    console.log("Length 3 was detected!");
    i = verb.slice(0, 2);
    outputLoc.innerHTML = i;
    break;
  case 4:
    console.log("Length 4 was detected!");
    i = verb.slice(0, 3);
    outputLoc.innerHTML = i;
    break;
  case 5:
    console.log("Length 5 was detected!");
    i = verb.slice(0, 4);
    outputLoc.innerHTML = i;
    break;
  default:
    console.log(`Verb ${verb} did not have length of 3, 4 or 5?`);
    outputLoc.innerHTML = `verbTenseSuffixer failed checking length of length ${verbLength}`;
    break;
}
// all this output.innerHTML needs to be swapped for a return
// since this will all get called by some other function anyway
// but for now it's whatever

switch (fixedTense) {
  case "present":
    console.log("Tense present was detected!");
    if (verbLength == 3) {i += "sa"} else
    if (verbLength == 4) {i += "sa"} else
    if (verbLength == 5) {i = verb + "sa"}
    else {console.log(`verbTenseSuffixer failed trying to suffix verb ${i} of length ${verbLength}`)}; // assa, nansa, hantasa
    outputLoc.innerHTML = i;
    break;

  case "past":
    console.log("Tense past was detected!");
    i += "ida"; // asida, nanida, hantida
    outputLoc.innerHTML = i;
    break;

  case "future":
    console.log("Tense future was detected!");
    i += "igo"; // asigo, nanigo, hantigo
    outputLoc.innerHTML = i;
    break;
  
  case "habitual":
    console.log("Tense habitual was detected!");
    i += "il"; // asil, nanil, hantil
    outputLoc.innerHTML = i;
    break;
    
  case "emphabit":
    console.log("Tense emphabit was detected!");
    if (verbLength == 3) {i += "sagil"} else // assagil
    if (verbLength == 4) {i += "sagil"} else // nansagil
    if (verbLength == 5) {i = verb + "sa" + "gil"} // hantasagil;
    else {console.log(`suffixer failed trying to suffix verb ${verb} trimmed ${i} of length ${verbLength}`)}
    outputLoc.innerHTML = i;
    break;
  
  case "des":
    console.log("Tense des was detected!");
    i += "ima"; // asima, nanima, hantima
    outputLoc.innerHTML = i;
    break;
  
  case "plain":
    console.log("Tense plain was detected!");
    i = verb; // frankly, the plain form shouldn't call the suffixer at all
    outputLoc.innerHTML = i;
    break;
  
  case "polite":
    console.log("Tense polite was detected!");
    i = verb + " yaso"; // asa yaso, nana yaso, hanta yaso
    outputLoc.innerHTML = i;
    break;
  
  case "imperative": // not fully implemented
    console.log("Tense imperative was detected!");
    i += "iyo"; // asiyo, naniyo, hantiyo. must create case for mamyeiyo (will currently write mamyiyo)
    outputLoc.innerHTML = i;
    break;
  
  case "abil":
    console.log("Tense abil was detected!");
    i += "ika"; // asika, nanika, hantika
    outputLoc.innerHTML = i;
    break;

  default:
    console.log(`Could not find tense ${tense}`);
    return "verbTenseSuffixer failed, check consolelog";
    break;
  };
}

// we are missing the ability to stack prefixes
// to negate prefixes
// and to use gaen
// no stacking also means no gaen+yong
