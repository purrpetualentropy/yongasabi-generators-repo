                                                            usedArgsIndex += 1;
                                                            sentence += " " + word + " " + currArg;
                                                            adjAttach = false;
                                                            console.log(`LOG: sentence is ${sentence} after added ${word} and ${currArg}`)
                                                                  }
                                                              }
          console.log(`LOG: sentence is ${sentence} after added ${currArg}.`);
        };
      console.log(`LOG: Exited loop. Getting verb.`);
      currArg = argsArray[0];
      console.log(`LOG: currArg registered as ${currArg}. This should be 0 of ${argsArray}.`);
      currArg = tenseSuffixer(currArg, tensesArray);
      sentence += " " + currArg;
      console.log(`LOG: Verb is ${currArg} after suffixing. Sentence is ${sentence}.`);
