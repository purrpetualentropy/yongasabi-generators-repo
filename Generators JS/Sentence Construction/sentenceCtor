                                                            console.log(`LOG: got word ${word} from adjMiniDict at index ${adjIndex}`);
                                                              if (adjMiniDict[adjIndex].gen[sentenceType] == true) {
                                                                console.log(`LOG: selected word is genitive, suffixing`)
                                                                word += "la";
