          console.log(`LOG: word ${miniDict[currArgIndex].word} was added to usedArgs at ${usedArgsIndex}`);
          console.log(`LOG: usedArgs is now ${usedArgs}`);
          usedArgsIndex += 1;
          currArg = caseSuffixer(word, argsArray[i], sentenceType);
          console.log(`LOG: currArg is ${currArg} after case marked. now checking for adjective`);
          if (adjAttach == false) {console.log(`LOG: adjAttach is false, value is ${adjAttach}. adding to sentence`); sentence += " " + currArg} else
          if (adjAttach == true) {console.log(`LOG: adjAttach is true. Checking possessability.`)
